<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageViewAcercaDe"
                    android:src="@drawable/iconoacercade"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/textView2" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esta aplicación ha sido creada, desarrollada, e implementada por Pablo Arranz Ropero y Juan Alberto Camino Sáez. Todos los derechos reservados."
                    android:id="@+id/textView"
                    android:layout_below="@+id/imageViewAcercaDe"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="email"
                    android:text="Contacto: \n\npabloarr@ucm.es \n\njcamin01@ucm.es"
                    android:id="@+id/textView2"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="35dp" />
            </LinearLayout>



        </LinearLayout>


    </ScrollView>
